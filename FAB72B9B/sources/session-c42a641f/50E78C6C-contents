#--- 2. LIMPIEZA DE DATOS DE REDES SOCIALES (TIC) ---

# Imprime los nombres de las columnas para revisarlos
print("Columnas de 'datos_redes_sociales':")
print(names(datos_redes_sociales))

# Limpiamos la tabla
# (¡¡AJUSTA LOS NOMBRES DE COLUMNA SI ES NECESARIO!!)
tic_limpio <- datos_redes_sociales %>%
  
  # Filtramos igual que antes
  filter(Sexo != "Ambos sexos", Grupo.de.edad != "Total") %>%
  
  # Seleccionamos las columnas clave
  # ASUMO que la columna con el porcentaje se llama 'Total'
  select(
    Sexo, 
    Edad = Grupo.de.edad, # Renombramos igual que antes
    Porcentaje_TIC = Total   # Esta es nuestra variable "causa"
  ) %>%
  
  # Convertimos el texto (ej: "80,5") en un número (ej: 80.5)
  mutate(
    Porcentaje_TIC_Num = parse_number(Porcentaje_TIC, 
                                      locale = locale(decimal_mark = ","))
  )

# ¡Revisa la segunda tabla limpia!
View(tic_limpio)
